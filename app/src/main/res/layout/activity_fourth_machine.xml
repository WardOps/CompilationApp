<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/items_background"
    android:layout_height="match_parent"
    tools:context=".MachineAct.FourthMachine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/ivReturn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.219"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <EditText
            android:id="@+id/etStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:capitalize="words"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="Enter Student Name"
            android:inputType="text|textCapWords"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.741" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="217dp">

        <EditText
            android:id="@+id/etMidterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="Midterm"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/etFinal"
            app:layout_constraintEnd_toEndOf="@+id/etPrelim"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="@+id/etPrelim" />

        <TextView
            android:id="@+id/tvEnterGrades"
            android:layout_width="169dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/amiko"
            app:layout_constraintBottom_toTopOf="@+id/etPrelim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Enter Grades:" />

        <EditText
            android:id="@+id/etFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="Final"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etMidterm"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etMidterm" />

        <EditText
            android:id="@+id/etPrelim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/amiko"
            android:hint="Prelim"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/etMidterm"
            app:layout_constraintEnd_toEndOf="@+id/tvEnterGrades"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvEnterGrades" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="206dp">

        <TextView
            android:id="@+id/tvSG"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amiko"
            android:text="Semestral Grade:"
            app:layout_constraintBottom_toTopOf="@+id/tvPE"
            app:layout_constraintEnd_toEndOf="@+id/tvSN"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvSN" />

        <TextView
            android:id="@+id/tvRemarks"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/amiko"
            android:text="Remarks:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvPE"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvPE" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="111dp"
            android:layout_height="26dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/amiko"
            android:text="Results:"
            app:layout_constraintBottom_toTopOf="@+id/tvSN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPE"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amiko"
            android:text="Pt. Equivalent: "
            app:layout_constraintBottom_toTopOf="@+id/tvRemarks"
            app:layout_constraintEnd_toEndOf="@+id/tvSG"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvSG" />

        <TextView
            android:id="@+id/tvSN"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amiko"
            android:text="Student Name:"
            app:layout_constraintBottom_toTopOf="@+id/tvSG"
            app:layout_constraintEnd_toEndOf="@+id/tvResults"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="@+id/tvResults" />

        <TextView
            android:id="@+id/tvSNDisp"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginEnd="96dp"
            android:fontFamily="@font/amiko"
            android:text="SN"
            app:layout_constraintBottom_toTopOf="@+id/tvSGDisp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/tvSN"
            app:layout_constraintTop_toTopOf="@+id/tvSN"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvPEDisp"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amiko"
            android:text="PE"
            app:layout_constraintBottom_toTopOf="@+id/tvRemarksDisp"
            app:layout_constraintEnd_toEndOf="@+id/tvSGDisp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvPE" />

        <TextView
            android:id="@+id/tvSGDisp"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:fontFamily="@font/amiko"
            android:text="SG"
            app:layout_constraintBottom_toTopOf="@+id/tvPEDisp"
            app:layout_constraintEnd_toEndOf="@+id/tvSNDisp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvSG" />

        <TextView
            android:id="@+id/tvRemarksDisp"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/amiko"
            android:text="Remark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvPEDisp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvRemarks" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNewEnt"
            android:layout_width="125dp"
            android:layout_height="54dp"
            android:background="@drawable/buttons_background"
            android:fontFamily="@font/amiko"
            android:text="New Entry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCompute"
            app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201" />

        <Button
            android:id="@+id/btnCompute"
            android:layout_width="123dp"
            android:layout_height="55dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/buttons_background"
            android:fontFamily="@font/amiko"
            android:text="Compute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.194" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>